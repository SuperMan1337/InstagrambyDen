<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="260dp"
        tools:listitem="@layout/item_photo"


        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="220dp"
        android:text="Gumboll"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"

        >

    </TextView>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageView"
        android:src="@drawable/image3"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="205dp"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        />


    <ImageView
        android:id="@+id/instagram_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/instagram_logo" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="307dp"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/heart_point" />
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="357dp"
        android:paddingTop="11dp"
        app:srcCompat="@drawable/share" />



    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="570dp"
        android:src="@drawable/like" />
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="572dp"
        android:src="@drawable/comment" />
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="572dp"
        android:src="@drawable/share"/>

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="582dp"
        android:src="@drawable/dots" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"


        android:layout_marginEnd="15dp"
        android:layout_marginTop="572dp"
        android:src="@drawable/bookmark" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:layout_alignParentStart="true"
        android:layout_marginTop="605dp"
        android:layout_marginLeft="15dp"


        android:text="192 likes"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:layout_alignParentStart="true"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="630dp"
        android:gravity="bottom"

        android:text="Gumboll"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:layout_alignParentStart="true"

        android:layout_marginLeft="80dp"
        android:layout_marginTop="630dp"

        android:gravity="bottom"


        android:text="It's me :D"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textStyle="normal"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="655dp"
        android:gravity="bottom"


        android:text="View all comments (12)"
        android:textSize="16dp"
        android:textColor="@color/grey"
        android:textStyle="normal"
        >
    </TextView>

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="181dp"

        android:src="@drawable/background" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        tools:listitem="@layout/item_horizontal_list" />




</RelativeLayout>